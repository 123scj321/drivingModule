/* pages/user/server/server.wxss */
.serverContainer{
  width:700rpx;
  margin:0 auto;
}
.serverTitle{
  margin-top:50rpx;
  display: flex;
  justify-content: space-between;
  font-size:26rpx;
  color:#888888;
}
.rightLine,.leftLine{
  width:35%;
  border-top:2rpx solid #d2d2d2;
}
.serverTitle image{
  width:35rpx;
  height:35rpx;
}
.imageAndText{
  width:150rpx;
  display: flex;
  justify-content: space-between;
  margin-top:-15rpx;
}
/*question item  */
.questionItem{
  width:100%;
  border-bottom: 2rpx solid #d2d2d2;
  color:#333333;
  margin-top:55rpx;
  padding-bottom: 55rpx;
}
.questionTitle{
  font-size:30rpx;
  color:#333;
}
.questionTitle .circle{
 width:15rpx;
 height:15rpx;
 background: #666666;
 border-radius: 50%;
 margin-right:15rpx;
}
.answearText{
  margin-top:36rpx;
  font-size:26rpx;
  color:#555555;
  text-indent: 2em;
  font-family: "黑体";
}
.onlineButton{
  width:100%;
  height:60rpx;
  font-size:30rpx;
  color:#333;
  margin-top:190rpx;
  margin-right:400rpx;
}
.onlineServer{
  width:250rpx;
  height:60rpx;
  background: #fff;
  line-height: 60rpx;
  text-align: center;
  margin-right:0rpx;
}