/* pages/pay/paidOrder/paidOrder.wxss */
page{
  background: #f2f2f2;
  font-family: "微软雅黑";
}
.paidOrderContainer{
  width:700rpx;
  margin:40rpx auto;
  border-radius: 15rpx;
  background: #fff;
  padding-bottom:30rpx;
}
/*driverDetail first floor  */
.driverDetail{
  width:630rpx;
  height:215rpx;
  display: flex;
  justify-content: space-between;
  margin:0 auto;
}
.driverAvatar{
  width:140rpx;
  height:140rpx;
  margin-top:30rpx;
}
.driverAvatar image{
  width:140rpx;
  height:140rpx;
}
.driverContext{
  width:400rpx;
  height:130rpx;
  margin-top:40rpx;
}
.driverText,.orderAndScore{
  width:100%;
  display: flex;
  font-size:30rpx;
  color:#333333;
  height:44rpx;
}
.workTime{
  color:#e39603;
  font-size:20rpx;
  margin-left:24rpx;
  position: relative;
}
.workTime view{
  border:2rpx solid #e39603;
  padding:5rpx 10rpx;
  border-radius: 8rpx;
}
.workTime image{
  width:18rpx;
  height:18rpx;
  position: absolute;
  top:30rpx;
  left:-5rpx;
}
.orderAndScore image{
  width:22rpx;
  height:22rpx;
  margin-left:30rpx;
}
.say{
  font-size:26rpx;
  color:#888888;
}

.phoneImage{
  margin-top:12%;
}
.phoneImage image{
  width:50rpx;
  height:50rpx;
}
/*fee detail container  */
.feeTitle,.paywayTitle{
  width:100%;
  display: flex;
  justify-content: space-between;
  color:#888888;
  font-size:28rpx;
}
.leftLine,.rightLine{
  width:40%;
  border-top:2rpx solid #d2d2d2;
  margin-top:15rpx;
}
.totalAndDetail,{
  width:670rpx;
  height:170rpx;
  margin:0 auto;
}
.couponAndDetail{
  width:96%;
  height:120rpx;
  margin:0 auto;
}
.total,.coupon{
  width:96%;
  display: flex;
  justify-content: space-between;
  font-size:32rpx;
  color:#333333;
  margin-top:54rpx;
  margin:0 auto;
}
.checkDetail{
  width:100%;
  font-size:24rpx;
  color:#888888;
  margin-top:10rpx;
}
.checkText{
  margin-right:0rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: right;
}
.checkText image{
  width:20rpx;
  height:28rpx;
  margin-left:20rpx;
  margin-right:20rpx;
}
.imageDown{
  width:28rpx;
  height:20rpx;
  margin-left:20rpx;
  margin-right:20rpx;
}
.checkDetailContext,.checkDetailContext{
  width:96%;
  margin:0 auto;
}
.checkDetailContext view,.checkDetailContext view{
  display: flex;
  justify-content: space-between;
  font-size:20rpx;
  margin-top:10rpx;
  margin-bottom:10rpx;
}
.redText{
  color:#f04040;
}
.paidDetail{
  width:100%;
  border-top:2rpx solid #d2d2d2;
}
.paidContext{
  text-align: right;
   width:680rpx; 
  font-size:26rpx;
  color:#333333;
  margin-top:60rpx;
  margin-bottom:40rpx;
}
.paidContext text{
  color:#f04040;
  font-size:50rpx;
}
.wechatPay,.zhifubaoPay{
  width:680rpx;
  margin:30rpx auto;
  display: flex;
  justify-content: space-between;
  font-size:30rpx;
  height: 40rpx;
  line-height: 40rpx;
}
.wechatImageAndText image,.zhifubaoImageAndText image{
  width:40rpx;
  height:40rpx;
  margin-right: 40rpx;
  margin-top:5rpx;
}
.wechatImageAndText text{
  height: 40rpx;
  line-height: 40rpx;
}
.checked image{
  width:40rpx;
  height:40rpx;
}