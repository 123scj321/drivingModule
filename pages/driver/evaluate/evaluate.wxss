/* pages/driver/evaluate/evaluate.wxss */
page{
  background: #f2f2f2;
  font-family: "微软雅黑";
}
.satisfactionContainer{
  width:100%;
  height:100rpx;
  background: #fff;
  line-height: 100rpx;
  font-size:28rpx;
  margin-top:20rpx;
  color:#333;
  display: flex;
  justify-content: space-between;
}
.satisfactionText{
  margin-left:25rpx;
}
.satisfactionPrecent{
  margin-right: 25rpx;
}
.satisfactionProgress{
  width:350rpx;
  margin-top:45rpx;
}
/*evaluateContextContainer  */
.evaluateContextContainer{
  background: #fff;
  width:100%;
  min-height: 800rpx;
  margin-top:20rpx;
}
.evaluateContextButtonList{
  padding-top:20rpx; 
  width:700rpx;
  margin:20rpx auto;
  display: flex;
  flex-wrap: wrap;
  flex-direction: left;
  font-size:24rpx;
  color:#1b82ec;
}
.evaluateContextButtonItem{
  background: #cae4ff;
  padding:8rpx 30rpx;
  border-radius: 15rpx;
  margin:10rpx;
}
.borderTop{
  width:100%;
  height: 2rpx;
  border-top:2rpx solid #d2d2d2;
}
.evaluateContextList{
  width:700rpx;
  margin: 0 auto;
  font-size:24rpx;
  color:#333;
}
.evaluateContextTitle{
  height:80rpx;
  line-height: 80rpx;
  color:#888;
}
.evaluateContextItem{
  display: flex;
  justify-content: space-between;
  line-height: 40rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.phoneAndText{
  max-width: 560rpx;
}
.time{
  color:#888;
}