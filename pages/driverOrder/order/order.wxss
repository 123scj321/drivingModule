/* pages/order/order/order.wxss */
page{
  background: #f2f2f2;
}
/*nav  */
.nav{
  width:100%;
  height: 100rpx;
  display: flex;
  background: #fff;
  margin-bottom: 20rpx;
  line-height: 100rpx;
  justify-content: space-around;
  font-size:32rpx;
  color:#333;
}
.borderRight{
  width:2rpx;
  height: 50rpx;
  margin-top:25rpx;
  border-right: 2rpx solid #d2d2d2;
}
.borderBottom{
  border-bottom:5rpx solid #97c7f7;
}
.orderList{
  width: 750rpx;  
  display: inline-block;
  vertical-align:text-top;
}
.orderItem{
  width:750rpx;
  height:250rpx;
  background: #fff;
  font-size:26rpx;
  color:#333333;
  margin-bottom:30rpx;
  padding-top:30rpx;
}
.itemContainer{
  justify-content: space-between;
  display: flex;
  width:700rpx;
  margin:0 auto;
}
.address{
  display: flex;
  width:100%;
  margin-top:30rpx;
}
.addressProgress{
  width:33rpx;
  height:130rpx;
}
.addressProgress icon:first-child{
  width:20rpx;
  height:20rpx;
  border-radius: 50%;
  background: #2e8ef0;
}
.addressProgress icon:last-child{
  width:20rpx;
  height:20rpx;
  border-radius: 50%;
  background: #f0b72e;
}
.addressProgress view{
  height:40rpx;
  border-left:2rpx dotted #e7e7e7;
  margin-left:10rpx;
}
.addressContext view:last-child{
  margin-top:40rpx;
}
.orderId{
  color:#888;
}
.orderStatus{
  margin-right: 50rpx;
  color:#888;
  font-size:26rpx;
}
.yellowText{
  color:#f0b72e;
}
.Dept{
  padding:5rpx 25rpx;
  border-radius: 8rpx;
  border:2rpx solid #f0b72e;
}