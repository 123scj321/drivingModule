/* pages/order/orderReward/orderReward.wxss */
page{
  background: #f2f2f2;
}
.getReward{
  width:100%;
  background: #fff;
  display: flex;
  justify-content: space-between;
  height: 200rpx;
  margin-top:20rpx;
}
/* timeAndReward */
.timeAndReward{
  margin-left:35rpx;
}
.time{
  font-size:32rpx;
  color:#333;
  margin-top:36rpx;
}
.reward{
  font-size:28rpx;
  color:#333;
  margin-top:45rpx;
}
.rewardButton button{
  background: #0299de;
  width:170rpx;
  height: 60rpx;
  color:#fff;
  font-size:26rpx;
  margin-top:20rpx;
  margin-right: 25rpx;
}
.rewardButton .active{
background: #0299de;
}
.rewardButton .actived{
background: #aaa;
}
/*rewardConditionContainer  */
.title{
  width:100%;
  height: 75rpx;
  font-size:30rpx;
  color:#888;
  line-height: 75rpx;
  padding-left: 25rpx;
}
.context{
  background: #fff;
  padding-left: 25rpx;
  padding-right: 25rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.context view{
  height: 60rpx;
  line-height: 30rpx;
  font-size:28rpx;
  color:#333;
  display: flex;
  margin-left:25rpx;
  justify-content: space-between;
   text-indent:-1em;
}
.blueText{
  color:#0299de;
}
.greyText{
  color:#aaa;
}