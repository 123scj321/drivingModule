/* pages/order/appointmentOrder/appointmentOrder.wxss */
page{
  width:100%;
  height: 100%;
  background:#646e81;
  font-family: "黑体";
}
view{
  overflow: hidden;
}
/*appointment  */
.appointment{
  width:700rpx;
  height: 734rpx;
  margin:25rpx auto;
  position: relative;

}
.appointmentImage image{
  position: absolute;
  top:0rpx;
  width:100%;
  height: 100%;
}
.appointmentThrigle image{
  position: absolute;
  top:0rpx;
  right: 0rpx;
  width:200rpx;
  height: 172rpx;
}
.appointmentThrigle text{
  display: block;
  font-size:40rpx;
  font-family: "黑体";
  color:#fff;
  position: absolute;
  top:33rpx;
  right: 20rpx;
}
/*startAddressAndEndAddressAndDistance  */
.startAddressAndEndAddressAndDistance{
  width:100%;
  height: 100%;
  position: absolute;
  top:50rpx;
}
.address{
  display: flex;
  height: 200rpx;
  width:540rpx;
  font-size:30rpx;
  color:#333;
  margin-left:57rpx;
}
.addressProgress{
  width:33rpx;
  height: 200rpx;
  margin-left:10rpx;
}
.addressProgress icon:first-child{
  width:20rpx;
  height:20rpx;
  border-radius: 50%;
  background: #2e8ef0;
}
.addressProgress icon:last-child{
  width:20rpx;
  height:20rpx;
  border-radius: 50%;
  background: #f0b72e;
}
.addressProgress view{
  height:115rpx;
  border-left:2rpx dotted #e7e7e7;
  margin-left:10rpx;
}
.addressContext view:last-child{
  margin-top:115rpx;
}
/*  orderTime*/
.orderTime{
  text-align: center;
  margin-top:52rpx;
  color:#e9c65a;
  font-size:36rpx;
  font-family: "黑体";
}
/*distanceAndPrice  */
.distanceAndPrice{
  width:540rpx;
  display: flex;
  margin:0 auto;
  margin-top:44rpx;
  text-align: center;
  justify-content: center;
}
.title{
  font-size:30rpx;
  color:#333;
}
.context{
  font-size:60rpx;
  color:#333;
  margin-top:20rpx;
}
.reminder{
  width:100%;
  text-align: center;
  font-size:24rpx;
  color:#888;
  margin-top:100rpx;
}
.orderAndNextButton{
  width:100%;
  position: absolute;
  display: flex;
  bottom: 40rpx;
}
.getOrder{
  margin-left:250rpx;
  width:200rpx;
  height: 150rpx;
  line-height: 50rpx;
  border-radius: 100%;
  padding-top:50rpx;
  color:#fff;
  text-align: center;
  background:linear-gradient(145deg,#55c9ff,#0486c1);
}
.nextOrder{
  width:100rpx;
  height: 100rpx;
  color:#333;
  background: #fff;
  border-radius: 100%;
  font-size:30rpx;
  text-align: center;
  line-height: 100rpx;
  margin-top:100rpx;
  margin-left: 50rpx;
}
