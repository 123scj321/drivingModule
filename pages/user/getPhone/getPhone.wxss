/* pages/user/getPhone/getPhone.wxss */
/* getPhoneAndYanZhengMa */
.getPhoneAndYanZhengMa{
  width:100%;
  background: #f1f2f4;
  height: 100%;
  position: fixed;
  top:0rpx;
  left:0rpx;
  z-index:1000;
}
.getPhoneAndYanZhengMaContainer{
  position: absolute;
  width:100%;
  height: 500rpx;
  top:250rpx;
}
.PYtitle{
  width:100%;
  text-align: center;
  font-size:40rpx;
  color:#333;
  margin-bottom:50rpx;
}
.getPhone{
  width:100%;
  background: #fff;
  height:100rpx;
  line-height: 100rpx;
  font-size:30rpx;
}
.getPhone input{
  width:700rpx;
  margin:0 auto;
  height: 100rpx;
  line-height: 100rpx;
}
.getYanZhengMa{
  width:100%;
  background: #fff;
  height:100rpx;
  line-height: 100rpx;
  font-size:30rpx;
  display: flex;
  justify-content: space-between;
}
.getYanZhengMa input{
  width:530rpx;
  margin-left:25rpx;
  height: 100rpx;
  line-height: 100rpx;
}
.getYanZhengMa button{
  width:160rpx;
  height: 60rpx;
  border-radius: 0;
  border:none;
  font-size:26rpx;
  line-height: 60rpx;
  text-align: center;
  padding:0;
  margin-right: 25rpx;
  margin-top:25rpx;
  background: #ddd;
  color:#fff;
}
.getYanZhengMa button::after{
  border:none;
}
.getPhoneAndYanZhengMaButton button{
  width:700rpx;
  margin:50rpx auto;
  background: #ddd;
  font-size:36rpx;
  height: 90rpx;
  line-height: 90rpx;
  border:none;
  border-radius: 7rpx;
  color:#fff;
  text-align: center;
}.getPhoneAndYanZhengMaButton button::after{
  border:none;
}
.borderTop{
  border-top:2rpx solid #ddd;
}