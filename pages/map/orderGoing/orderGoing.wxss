/* pages/map/getOrderNotGoing/getOrderNotGoing.wxss */
.driverServerContainer{
  display: flex;
}
.myContainer{
   width:620rpx; 
}
.driverServer{
  width:100%;
  height:500rpx;
  background: #fff;
  margin-top:700rpx;
}
.orderDetailContainer{
  width:100%;
  height:390rpx;
  background: #fff;
  position: absolute;
  overflow: hidden;
  bottom: 0rpx;
  z-index:100;
}
/* driverDetail */
.driverDetail{
  width:630rpx;
  height:215rpx;
  display: flex;
  justify-content: space-between;
  margin:0 auto;
}
.driverAvatar{
  width:140rpx;
  height:140rpx;
  margin-top:30rpx;
}
.driverAvatar image{
  width:140rpx;
  height:140rpx;
}
.driverContext{
  width:400rpx;
  height:130rpx;
  margin-top:40rpx;
}
.driverText,.orderAndScore{
  width:100%;
  display: flex;
  font-size:30rpx;
  color:#333333;
  height:44rpx;
}
.workTime{
  color:#e39603;
  font-size:20rpx;
  margin-left:24rpx;
  position: relative;
}
.workTime view{
  border:2rpx solid #e39603;
  padding:5rpx 10rpx;
  border-radius: 8rpx;
}
.workTime image{
  width:18rpx;
  height:18rpx;
  position: absolute;
  top:30rpx;
  left:-5rpx;
}
.orderAndScore image{
  width:22rpx;
  height:22rpx;
  margin-left:30rpx;
}
.say{
  font-size:26rpx;
  color:#888888;
}

.phoneImage{
  margin-top:12%;
}
.phoneImage image{
  width:50rpx;
  height:50rpx;
}
.driverDetailList{
  width:100%;
  border-top:2rpx solid #d2d2d2;
  font-size:26rpx;
  color:#222222;
  display: flex;
  justify-content: space-around;
  padding-top:50rpx;
}
.driverDetailItem{
  background:#f3f3f3;
  border-radius:5rpx;
  padding:10rpx 20rpx;
  border:2rpx solid #888888;
}
/*引用组件  */
  @import "../my/my.wxss"; 