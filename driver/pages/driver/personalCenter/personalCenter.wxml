<!--pages/driver/personalCenter/personalCenter.wxml-->
<!--personal center container  -->
<view class='personalCenterContainer'>
  <!-- avatarAndWalletAndOrder -->
  <view class='avatarAndWalletAndOrder borderBottom'>
    <view class='avatar'>
      <image src="{{avatar}}"></image>
      <view>{{name}}</view>
    </view>
    <view class='walletAndOrder'>
      <view class='wallet' bindtap='intoPageHandler' data-skip="../wallet/wallet">
        <view class='blue'><text>{{income}}</text>元</view>
        <view>我的钱包</view>
      </view>
      <view class='order' bindtap='intoPageHandler' data-skip="../../order/order/order">
        <view class='blue'><text>{{orderCount}}</text>单</view>
        <view>我的订单</view>
      </view>
    </view>
  </view>
  <!--evaluate task knowledge activity  -->
   <view class='evaluateTaskKnowledgeActivity'>
    <view class='listItem borderBottom borderTop'  bindtap='intoPageHandler' data-skip="../evaluate/evaluate">
      <view class='title'>
        <image src="../../../images/icon/icon-09.png"></image>
        <text>顾客评价</text>
      </view>
      <view class='text'>
        <text>新增{{evaluate}}个评价</text>
        <image src="../../../images/icon/‭icon-05.png"></image>
      </view>
    </view>
    <view class='listItem borderBottom'  bindtap='intoPageHandler' data-skip="../knowleage/knowleage">
      <view class='title'>
        <image src="../../../images/icon/icon-10.png"></image>
        <text>司机须知</text>
      </view>
      <view class='text'>
        <text></text>
        <image src="../../../images/icon/‭icon-05.png"></image>
      </view>
    </view>
    <view class='listItem borderBottom ' bindtap='intoPageHandler' data-skip="../personalInformation/personalInformation">
      <view class='title'>
        <image src="../../../images/icon/icon-07.png"></image>
        <text>个人信息</text>
      </view>
      <view class='text'>
        <text>补全个人信息</text>
        <image src="../../../images/icon/‭icon-05.png"></image>
      </view>
    </view>
  </view> 
  <!--information handler server  -->
   <view class='informationHandlerServer'>
    <view class='listItem borderBottom borderTop'  bindtap='intoPageHandler' data-skip="../../order/accidentOrder/accidentOrder">
      <view class='title'>
        <image src="../../../images/icon/icon-11.png"></image>
        <text>事故处理</text>
      </view>
      <view class='text'>
        <text></text>
        <image src="../../../images/icon/‭icon-05.png"></image>
      </view>
    </view>
    <view class='listItem borderBottom' bindtap='callPhoneHandler'>
      <view class='title'>
        <image src="../../../images/icon/icon-14.png"></image>
        <text>在线客服</text>
      </view>
      <view class='text'>
        <text></text>
        <image src="../../../images/icon/‭icon-05.png"></image>
      </view>
    </view>
  </view> 
</view>
